<Window x:Class="Example.ReactViewExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example"
        mc:Ignorable="d"
        Title="ReactViewExample" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" >
            <Border Background="AntiqueWhite" Padding="10" MouseMove="OnDragPlaceholderMouseMove">
                <TextBlock TextAlignment="Center">Drag Me</TextBlock>
            </Border>
            <Button Click="OnWPFButtonClick" AllowDrop="True" Padding="10">WPF button</Button>
        </StackPanel>

        <local:ExampleView x:Name="exampleView" 
                           Click="OnExampleViewClick" 
                           EnableDebugMode="True"
                           AllowDrop="True"
                           CanDrop="OnExampleViewCanDrop"/>

    </DockPanel>
</Window>
